{
    // "eslint.experimental.useFlatConfig": true,
    "eslint.options": {
        "overrideConfigFile": "rules/.eslintrc"
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
    "files.associations": {
        "api-extractor.json": "jsonc",
        "tsconfig.json": "jsonc"
    },
    "editor.tabSize": 2,
    "editor.formatOnSave": false,
    "cSpell.words": [
        "antd",
        "clsx",
        "einfach",
        "overscan",
        "swcrc",
        "testid",
        "tsbuildinfo"
    ],
    "testing.automaticallyOpenPeekView": "never",
    "jest.runMode": {
        "coverage": true,
        "deferred": true,
        "testFileOnly": true,
        "type": "on-save"
    }
}